<div class="header-box">
  <h1>Car Listings</h1>
</div>

<div class="car-container">
  <% @cars.each do |car| %>
    <div class="car">
      <h3><%= car.make %> <%= car.model %></h3>
      <%= link_to car_path(car) do %>
        <% if car.image_url.present? %>
          <%= image_tag car.image_url, alt: "#{car.make} #{car.model}", width: 200, height: 150 %>
        <% else %>
          <p>No image found</p>
        <% end %>
      <% end %>
      <p class="car-price"> <%= number_to_currency(car.price_per_day, unit: "Â£", precision: 0) %></p>
    </div>
  <% end %>
</div>

<%= link_to 'New Car', new_car_path %>
