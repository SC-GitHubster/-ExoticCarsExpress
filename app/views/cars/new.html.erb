<h1>New Car</h1>

<%= form_with(model: @car, local: true) do |form| %>

    <div class="field">
      <%= form.label :make %>
      <%= form.text_field :make %>
    </div>

    <div class="field">
      <%= form.label :model %>
      <%= form.text_field :model %>
    </div>

    <div class="field">
      <%= form.label :year %>
      <%= form.number_field :year %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="field">
      <%= form.label :image_url %>
      <%= form.text_field :image_url %>
    </div>

    <div class="actions">
      <%= form.submit "Create Car" %>
    </div>
    
<% end %>

<%= link_to 'Back', cars_path %>
